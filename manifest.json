{
  "manifest_version": 2,

  "name": "Anti-troll Harassment Checker",
  "description": "This extension will check you before you wreck you.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ],
   "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
],
"background": {
    "scripts": ["background.js"]
  }
}